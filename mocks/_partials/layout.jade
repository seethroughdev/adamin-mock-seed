!!!
html.no-js(lang='en')
  head
    block vars
      - var title       = "Demo App"
      - var jsPath      = "js"
      - var cssPath     = "css"
      - var vendorPath  = "../components"
      - var title       = "Demo App"
      - var description = "Description of Demo App"

    block meta
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='description', content="#{description}")
      meta(name='viewport', content='width=device-width')

    title #{title}

    block css
      link(rel='stylesheet', href='#{vendorPath}/normalize-css/normalize.css')
      link(rel='stylesheet', href='#{cssPath}/complete.css')

  body
    .main-container

      block nav
        include nav

      .content
        block content
      // eof content

    block scripts
      script(src="#{vendorPath}/jquery/jquery.js")
      script(src="#{vendorPath}/Adamin-Clone/dist/adamin_clone.min.js")